local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/shlexware/Orion/main/source')))()

local Window = OrionLib:MakeWindow({Name = "KillstreakSwordsV4", HidePremium = false, SaveConfig = true, ConfigFolder = "OrionTest"})

local Tab = Window:MakeTab({
	Name = "main",
	Icon = "rbxassetid://4483345998",
	PremiumOnly = false
})

local Section = Tab:AddSection({
	Name = "Farm(beta)"
})

Tab:AddToggle({
	Name = "AutoFarm noobs",
	Default = false,
	Callback = function(Value)
		Tab:AddToggle({
	Name = "Auto Farm Noobs",
	Default = false,
	Callback = function(Value)
		_G.AutoFarm = Value
		print("AutoFarm is now:", Value)

		while _G.AutoFarm do
			wait()
			pcall(function()
				for _, v in pairs(game:GetService("Workspace").Living:GetDescendants()) do
					if v:IsA("Model") and v.Name == "Noobs" and v:FindFirstChild("Humanoid") and v:FindFirstChild("HumanoidRootPart") then
						local humanoid = v.Humanoid
						local hrp = v.HumanoidRootPart

						if humanoid.Health > 0 then
							repeat
								task.wait()
								-- ย้ายตัวละครไปอยู่ด้านบนหัวมอนและหันลง
								game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame = 
									hrp.CFrame * CFrame.new(0, 5, 0) * CFrame.Angles(math.rad(90), 0, 0)
							until not _G.AutoFarm or humanoid.Health <= 0
						end
					end
				end
			end)
		end
	end    
})
})

_G.AutoClick = false -- ตัวแปรสำหรับเปิด/ปิดออโต้คลิก

Tab:AddToggle({
	Name = "Auto attack(beta)",
	Default = false,
	Callback = function(Value)
		_G.AutoClick = Value
		print("AutoClick is now: ", Value)

		while _G.AutoClick do
			wait(0.1) -- ตั้งค่าเวลาหน่วงระหว่างคลิก
			pcall(function()
				local VirtualInputManager = game:GetService("VirtualInputManager")
				VirtualInputManager:SendMouseButtonEvent(0, 0, 0, true, game, 0) -- MouseButton1Down
				wait(0.05) -- เวลาหน่วงก่อนปล่อยคลิก
				VirtualInputManager:SendMouseButtonEvent(0, 0, 0, false, game, 0) -- MouseButton1Up
			end)
		end
	end
})
